@{
    ViewData["Title"] = "Admin Dashboard";
    var currentUser = ViewBag.CurrentUser as Backend.Areas.Identity.Data.ApplicationUser;
    var userRoles = ViewBag.UserRoles as List<string>;
}

<style>
    .dashboard-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 15px;
        color: white;
        transition: transform 0.3s ease;
    }
    .dashboard-card:hover {
        transform: translateY(-5px);
    }
    .stat-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
        border-left: 4px solid #667eea;
    }
    .stat-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #667eea;
    }
    .welcome-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        color: white;
        padding: 2rem;
        margin-bottom: 2rem;
    }
    .btn-modern {
        background: linear-gradient(45deg, #667eea, #764ba2);
        border: none;
        border-radius: 25px;
        padding: 12px 30px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }
    .btn-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        color: white;
    }
</style>

<div class="container-fluid">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4 mb-3">Welcome back, @(currentUser?.FirstName ?? "Admin")!</h1>
                <p class="lead mb-0">Manage your authentication system with ease</p>
                <small class="opacity-75">User ID: @ViewData["UserID"] | Roles: @string.Join(", ", userRoles ?? new List<string>())</small>
            </div>
            <div class="col-md-4 text-end">
                <div class="d-flex flex-column gap-2">
                    <a asp-controller="Home" asp-action="GetToApi" class="btn-modern">
                        <i class="fas fa-code me-2"></i>API Documentation
                    </a>
                    <a asp-controller="UserManagement" asp-action="Index" class="btn-modern">
                        <i class="fas fa-users-cog me-2"></i>Manage Users
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card p-4">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1">Total Users</h6>
                        <div class="stat-number">@ViewBag.TotalUsers</div>
                    </div>
                    <div class="text-primary">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card p-4">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1">Verified Users</h6>
                        <div class="stat-number">@ViewBag.VerifiedUsers</div>
                    </div>
                    <div class="text-success">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card p-4">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1">Admin Users</h6>
                        <div class="stat-number">@ViewBag.AdminUsers</div>
                    </div>
                    <div class="text-warning">
                        <i class="fas fa-crown fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card p-4">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="text-muted mb-1">Recent Users (30d)</h6>
                        <div class="stat-number">@ViewBag.RecentUsers</div>
                    </div>
                    <div class="text-info">
                        <i class="fas fa-user-plus fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="stat-card p-4">
                <h5 class="mb-3">Quick Actions</h5>
                <div class="d-flex flex-wrap gap-3">
                    <a asp-controller="Home" asp-action="GetToApi" class="btn btn-outline-primary">
                        <i class="fas fa-code me-2"></i>API Docs
                    </a>
                    <a asp-controller="UserManagement" asp-action="Index" class="btn btn-outline-success">
                        <i class="fas fa-users-cog me-2"></i>Manage Users
                    </a>
                    <a asp-controller="Home" asp-action="Questions" class="btn btn-outline-info">
                        <i class="fas fa-question-circle me-2"></i>Questions
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- User Statistics Modal -->
<div class="modal fade" id="userStatsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User Statistics</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>User Distribution</h6>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>Total Users:</span>
                                <strong>@ViewBag.TotalUsers</strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Verified Users:</span>
                                <strong>@ViewBag.VerifiedUsers</strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Admin Users:</span>
                                <strong>@ViewBag.AdminUsers</strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Recent Users:</span>
                                <strong>@ViewBag.RecentUsers</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6>Verification Status</h6>
                        @{
                            var verifiedPercentage = ViewBag.TotalUsers > 0 ? (ViewBag.VerifiedUsers * 100) / ViewBag.TotalUsers : 0;
                            var unverifiedCount = ViewBag.TotalUsers - ViewBag.VerifiedUsers;
                        }
                        <div class="progress mb-2">
                            <div class="progress-bar bg-success" style="width: @verifiedPercentage%"></div>
                        </div>
                        <small class="text-muted">@verifiedPercentage% verified (@ViewBag.VerifiedUsers/@ViewBag.TotalUsers)</small>
                        
                        <div class="mt-3">
                            <h6>Admin Distribution</h6>
                            @{
                                var adminPercentage = ViewBag.TotalUsers > 0 ? (ViewBag.AdminUsers * 100) / ViewBag.TotalUsers : 0;
                            }
                            <div class="progress mb-2">
                                <div class="progress-bar bg-warning" style="width: @adminPercentage%"></div>
                            </div>
                            <small class="text-muted">@adminPercentage% admin users</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showUserStats() {
        var modal = new bootstrap.Modal(document.getElementById('userStatsModal'));
        modal.show();
    }
</script>
